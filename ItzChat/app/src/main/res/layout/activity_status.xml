<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aayushsingh.itzchat.StatusActivity">
    <include layout="@layout/app_bar_layout"
        android:id="@+id/status_appbar">
    </include>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/status_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/status_appbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="My Status"
            android:textColor="#000000"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/b_savechanges"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_alignRight="@+id/status_input"
        android:layout_below="@+id/status_input"
        android:layout_marginTop="35dp"
        android:text="@string/status_bstatus"
        android:background="@drawable/dark1"
        android:textColor="#ffffff"
        />


</RelativeLayout>
