<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aayushsingh.itzchat.SettingsActivity"
    android:background="@drawable/borange">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/setting_img"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/defaultavatar"/>

    <Button
        android:id="@+id/b_changestatus"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="52dp"
        android:text="@string/status"
        android:background="@drawable/dark1"
        android:textColor="#ffffff"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/b_changeimage"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/b_changestatus"
        android:layout_marginBottom="15dp"
        android:text="@string/image"
        android:background="#ffffff"
        android:textSize="15sp"
        android:textColor="#b35900"/>

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setting_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="Username"
        android:textColor="#ffffff"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Hi there!"
        android:textSize="15sp"
        android:textColor="#ffffff"/>


</RelativeLayout>
